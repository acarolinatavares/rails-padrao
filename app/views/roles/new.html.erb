<ol class="breadcrumb">
  <li><a href="<%= root_path%>">Principal</a></li>
  <li><%= link_to "Grupos", roles_path%></li>
  <li>Novo grupo</li>
</ol>
<%= painel_titulo("Cadastro de grupo").html_safe %>
<div class="panel-body">

  <div class="row">
    <div class="col-md-10"> <%= exibe_erros(@role).html_safe if @role.errors.any?%></div>
  </div>
  <p>
    <%= form_for @role, :html => {:class => 'form-horizontal' } do |f| %>

      <div class="form-group">
        <%= f.label :name, "Nome:",:class => "col-xs-6 col-sm-3 col-md-2 control-label" %>
        <div class="col-sm-2 col-md-3">
          <%= f.text_field :name, :class => "form-control","data-validate" => "validate(required)", :autofocus => true,:title => "Nome do grupo",:placeholder => "Insira o nome do grupo"%>
          <p class="help-block" style="font-size: 11px;">Insira seu nome. Obrigat√≥rio.</p>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 col-md-offset-3">
          <%= f.submit 'Cadastrar', :class => 'btn-primary' %>
        </div>

      </div>
  <% end %>

</div>
</div>

<script type="text/javascript">
    $( document ).ready(function() {
        $('#new_role').ketchup();
    });
</script>
